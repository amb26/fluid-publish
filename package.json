{
  "name": "publish",
  "version": "0.1.0-dev",
  "description": "A CLI tool for publishing a node package to npm",
  "main": "publish.js",
  "engines": {
    "node": ">=0.12.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jobara/publish.git"
  },
  "keywords": [
    "npm",
    "publish",
    "node",
    "module",
    "CLI"
  ],
  "author": "Fluid Project",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/jobara/publish/issues"
  },
  "homepage": "http://fluidproject.org",
  "dependencies": {
    "es6-template-strings": "2.0.0"
  },
  "devDependencies": {
    "grunt": "^0.4.5",
    "grunt-contrib-jshint": "~0.9.0",
    "grunt-jsonlint": "1.0.4"
  },
  "defaultOptions": {
    "changes": "git status -s -uno",
    "rawTimestamp": "git show -s --format=%ct HEAD",
    "revision": "git rev-parse --verify --short HEAD",
    "pack": "npm pack",
    "publish": "npm publish",
    "version": "npm version --no-git-tag-version ${version}",
    "distTag": "npm dist-tag add infusion@${version} ${tag}",
    "clean": "git reset HEAD --hard",
    "devVersion": "${version}.${timestamp}.${revision}",
    "devTag": "dev"
  }
}
